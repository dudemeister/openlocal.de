<h1>Listing images</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Creator</th>
    <th>Format</th>
    <th>File</th>
    <th>Geotag</th>
    <th>Georange</th>
  </tr>

<% for image in @images %>
  <tr>
    <td><%=h image.source %></td>
    <td><%=h image.creator %></td>
    <td><%=h image.format %></td>
    <td><%=h image.file %></td>
    <td><%=h image.geotag %></td>
    <td><%=h image.georange %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New image', new_image_path %>
