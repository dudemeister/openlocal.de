<h1>New issue</h1>

<% form_for(@issue) do |f| %>
  <%= f.error_messages %>
	
	<%= f.hidden_field :newspaper_id, :value => @newspaper.id %>

  <p>
    <%= f.label :publish_on %><br />
    <%= f.date_select :publish_on %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', issues_path %>
